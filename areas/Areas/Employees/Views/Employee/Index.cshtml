@{
}
@model areas.Areas.Employees.Data.EmployeeDTO

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-sm">
        <caption>Employees</caption>
        <thead class="thead-light">
            <tr>
                <th></th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Title</th>
                <th>DateOfBirth</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Employees != null)
            {
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td class="text-center">
                            <a asp-for asp-route-id="@item.Id">Edit</a>
                        </td>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.DateOfBirth
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Title</th>
                <th>DateOfBirth</th>
            </tr>
        </tfoot>
    </table>
</div>